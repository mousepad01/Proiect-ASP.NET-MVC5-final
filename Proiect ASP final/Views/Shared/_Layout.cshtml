<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top justify-content-between customNavbar display-4"> 
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a id="linkProd" href="/Produs/Index">Produse</a></li>
                    <li class="nav-item"><a id="linkCateg" href="/Categorie/Index">Categorii</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a id="linkAdrese" href="/Adresa/Index">Adrese</a></li>
                        <li class="nav-item"><a id="linkCart" href="/Comanda/Index">Comenzi</a></li>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <li class="nav-item"><a id="linkCart" href="/CartItem/Index">Coș de cumpărături</a></li>
                    }
                    <li class="nav-item">
                        <div class="srchDiv">
                            <form method="get" action="/Produs/CautaProdus" class="srchForm">
                                <input type="text" name="searched" placeholder="Caută produs..." class="srchInput" />
                                <button type="submit" class="btn srchBtn"><i class="glyphicon glyphicon-search"></i></button>
                            </form>
                        </div>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Mitoi Ștefan, Stanciu Andrei Călin</p>
        </footer>
    </div>
    <script src="~/Scripts/NavBarScript.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/navbar")
    @RenderSection("scripts", required: false)
    @Styles.Render("~/Content/css")
</body>
</html>
