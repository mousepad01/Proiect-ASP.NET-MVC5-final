<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/ColorScheme.css" />
</head>
<body>
    <div class="navbar navbar-light navbar-fixed-top justify-content-between customNavbar">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a id="linkProd" href="/Produs/Index">PRODUSE</a></li>
                    <li class="nav-item"><a id="linkCateg" href="/Categorie/Index">CATEGORII</a></li>
                    <li class="nav-item"><a id="linkAdrese" href="/Adresa/Index">ADRESE</a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Mitoi Ștefan, Stanciu Andrei Călin</p>
        </footer>
    </div>

    <script src="~/Scripts/NavBarScript.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
